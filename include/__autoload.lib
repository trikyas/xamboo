function __autoload($classname)
{
  if (is_file('../include/'.str_replace('\\', '/', $classname).".lib"))
  {
    include_once '../include/'.str_replace('\\', '/', $classname).".lib";
    return;
  }
  throw new \Error("The common library <b>$classname</b> has not been found.");
}

