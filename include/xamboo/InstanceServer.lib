<?php

class InstanceServer extends Multiton
{
  private $instance = null;

  public function __construct($id)
  {
    parent::__construct($id);

    // Separate page path from page id
    $uid = (strpos($id, '/') !== false)?substr($id, strrpos($id, '/')+1):$id;
    // $uid is <pageid>.<version>.<language>
    $path = strtok($id, '.');

    if (!is_file($this->base->PAGESDIR.$this->base->PAGESCONTAINER . '/' . $path . '/' . $uid . '.instance'))
      return;
    $this->instance = new InstanceSource(
      new FileSource($this->base->PAGESDIR, $this->base->PAGESCONTAINER . '/' . $path .'/', $uid . '.instance'),
      new FastObjectSource(
        new FileSource($this->base->CACHE1DIR, 'afo/'. $this->base->PAGESCONTAINER .'/' . $path .'/', $uid . '.instance.afo', true),
        $this->base->SHM?new SHMSource($this->base->PAGESCONTAINER . '/' . $path . '/' . $uid . '.instance.afo', $this->base->SHM):null
        )
      );
  }
  
  public function read()
  {
    if ($this->instance)
      return $this->instance->read();
    return null;
  }
}

?>