<?php

class BoxServer extends Multiton
{
  private $boxflow;

  public function __construct($id)
  {
    parent::__construct($id);

    // Separate page path from page id
    $uid = (strpos($id, '/') !== false)?substr($id, strrpos($id, '/')+1):$id;
    // $uid is <pageid>.<version>.<language>
    $path = strtok($id, '.');

    if (!is_file($this->base->PAGESDIR.$this->base->PAGESCONTAINER . '/' . $path . '/' . $uid . '.boxflow'))
      return;
    $this->boxflow = new BoxSource(
      new FileSource($this->base->PAGESDIR, $this->base->PAGESCONTAINER . '/'. $path .'/', $uid . '.boxflow'),
      new FastObjectSource(
        new FileSource($this->base->CACHE1DIR, 'afo/'. $this->base->PAGESCONTAINER . '/' . $path .'/', $uid . '.boxflow.afo', true),
        $this->base->SHM?new SHMSource($this->base->PAGESCONTAINER . '/' . $path . '/' . $uid . '.boxflow.afo', $this->base->SHM):null
        )
      );
  }
  
  public function read()
  {
    if ($this->boxflow)
      return $this->boxflow->read();
    return null;
  }

}



?>