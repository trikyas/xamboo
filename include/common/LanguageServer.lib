<?php

class LanguageServer extends Multiton
{
  private $language = null;

  public function __construct($id)
  {
    parent::__construct($id);

    // Separate page path from page id
    $uid = (strpos($id, '/') !== false)?substr($id, strrpos($id, '/')+1):$id;
    // $uid is <pageid>.<version>.<language>
    $path = strtok($id, '.');

    if (!is_file($this->base->PAGESDIR.$this->base->PAGESCONTAINER . '/' . $path . '/' . $uid . '.language'))
      return;
    $this->language = new LanguageSource(
      new FileSource($this->base->PAGESDIR, $this->base->PAGESCONTAINER . '/'. $path .'/', $uid . '.language'),
      new FastObjectSource(
        new FileSource($this->base->CACHE1DIR, 'afo/'. $this->base->PAGESCONTAINER . '/' . $path .'/', $uid . '.language.afo', true),
        $this->base->SHM?new SHMSource($this->base->PAGESCONTAINER . '/' . $path . '/' . $uid . '.language.afo', $this->base->SHM):null
        )
      );
  }
  
  public function read()
  {
    if ($this->language)
      return $l = $this->language->read();
    return null;
    
  }

}



?>